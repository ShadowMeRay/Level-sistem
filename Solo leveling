  <div class="container">
    <div class="card">
      <h2>üèÜ –ê—á–∏–≤–∫–∏</h2>
      <ul id="achievements"></ul>
      <input type="text" id="newAchievement" placeholder="–ù–æ–≤–∞—è –∞—á–∏–≤–∫–∞" />
      <button onclick="addAchievement()">–î–æ–±–∞–≤–∏—Ç—å</button>
    </div>

    <div class="card">
      <h2>üõí –ú–∞–≥–∞–∑–∏–Ω</h2>
      <ul id="shop"></ul>
      <input type="text" id="newShopItem" placeholder="–ù–æ–≤—ã–π –ø—Ä–µ–¥–º–µ—Ç" />
      <button onclick="addShopItem()">–î–æ–±–∞–≤–∏—Ç—å</button>
    </div>
  </div>

  <!-- Firebase –∏ –ª–æ–≥–∏–∫–∞ —Å–∞–π—Ç–∞ -->
  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/12.2.1/firebase-app.js";
    import { getDatabase, ref, push, onValue, remove, update } from "https://www.gstatic.com/firebasejs/12.2.1/firebase-database.js";

    // ‚ö° –¢–≤–æ–∏ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ Firebase
    const firebaseConfig = {
      apiKey: "AIzaSyDW4SQaVKDmU8kgQ1xO1IlCwKfMoACCLVY",
      authDomain: "level-sistem.firebaseapp.com",
      databaseURL: "https://level-sistem-default-rtdb.europe-west1.firebasedatabase.app",
      projectId: "level-sistem",
      storageBucket: "level-sistem.firebasestorage.app",
      messagingSenderId: "417407528186",
      appId: "1:417407528186:web:4e8d3f55fe3cf8871ced43"
    };

    const app = initializeApp(firebaseConfig);
    const db = getDatabase(app);

    const achRef = ref(db, "achievements");
    const shopRef = ref(db, "shop");

    // --- –î–æ–±–∞–≤–ª–µ–Ω–∏–µ ---
    window.addAchievement = function() {
      const input = document.getElementById("newAchievement");
      if (input.value.trim() !== "") {
        push(achRef, input.value.trim());
        input.value = "";
      }
    };

    window.addShopItem = function() {
      const input = document.getElementById("newShopItem");
      if (input.value.trim() !== "") {
        push(shopRef, input.value.trim());
        input.value = "";
      }
    };

    // --- –†–µ–Ω–¥–µ—Ä–∏–Ω–≥ —Å –∫–Ω–æ–ø–∫–∞–º–∏ ---
    function renderList(refObj, listId) {
      onValue(refObj, (snapshot) => {
        const list = document.getElementById(listId);
        list.innerHTML = "";
        snapshot.forEach((child) => {
          const li = document.createElement("li");
          const text = document.createElement("span");
          text.textContent = child.val();
          li.appendChild(text);

          // –ö–Ω–æ–ø–∫–∞ —Ä–µ–¥–∞–∫—Ç–∏—Ä–æ–≤–∞—Ç—å
          const editBtn = document.createElement("button");
          editBtn.textContent = "‚úèÔ∏è";
          editBtn.onclick = () => {
            const newVal = prompt("–í–≤–µ–¥–∏—Ç–µ –Ω–æ–≤–æ–µ –∑–Ω–∞—á–µ–Ω–∏–µ:", child.val());
            if (newVal !== null && newVal.trim() !== "") {
              update(child.ref, newVal);
            }
          };

          // –ö–Ω–æ–ø–∫–∞ —É–¥–∞–ª–∏—Ç—å
          const delBtn = document.createElement("button");
          delBtn.textContent = "‚ùå";
          delBtn.onclick = () => remove(child.ref);

          li.appendChild(editBtn);
          li.appendChild(delBtn);
          list.appendChild(li);
        });
      });
    }

    renderList(achRef, "achievements");
    renderList(shopRef, "shop");
  </script>
